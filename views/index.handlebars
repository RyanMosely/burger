    <img src="assets/img/burger.png" alt="burger png">

<br>
    <h1>Eat-Da-Burger!</h1>
<br>



<ul>
  {{#each burgers}}
  <div>
      {{#unless devoured}}
      {{burger_name}} <button class="devour-burger" data-id="{{this.id}}">Devour it!</button>
      {{/unless}}
  </div>
  {{/each}}
</ul>
<hr>
<h2 class="devoured">Devoured Burgers</h2>
<ul>
  {{#each burgers}}
  <div>
      {{#if devoured}}
      {{burger_name}} 
      {{/if}}
  </div>
  {{/each}}
</ul>
<hr>
    <form class="create-form">

        <div class="form-group">
          <label for="ca">Enter a burger you want to eat and Click the "Submit" button.</label>
          <input type="text" id="bu" name="name">
        </div>
        <button type="submit">Submit</button>
        <br>
        <br>
    </form>
